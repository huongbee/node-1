<%- contentFor('content')%>
    <div class="container">

        <form action="/book/add" method="POST" role="form" enctype="multipart/form-data">
            <legend>
                <h2>Add book</h2>
            </legend>

            <div class="form-group">
                <label for="">Title</label>
                <input type="text" class="form-control" name="title" placeholder="Enter title">
            </div>
            <div class="form-group">
                <label for="">Author</label>
                <input type="text" class="form-control" name="author" placeholder="Enter author">
            </div>
            <div class="form-group">
                <label for="">Detail</label>
                <textarea class="form-control" name="detail" id="" rows="3"></textarea>
            </div>
            <div class="form-group">
                <label for="">Image</label>
                <input type="file" class="form-control-file" name="avatar" id="" aria-describedby="fileHelpId">
            </div>
            <button type="submit" class="btn btn-primary">Add</button>
        </form>

    </div>